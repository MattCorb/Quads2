@{
    ViewData["Title"] = "Home Page";
}

@model List<Quads.Models.Task>


<div class="container" style="padding:10px 5px 5px 10px">
    <div class="row">
        <div class="col-2"></div>
        <div class="col-10">
                <h1 style="text-align:center">Stephen Covey's Time Management Matrix</h1>
        </div>
    </div>
</div>

<div class="container" style="padding:10px 5px 5px 10px">

    @*Row Header*@
    <div class="row">

        <div class="col-2" style="border-top:0px solid; border-left:0px solid; border-right:0px solid; border-bottom:0px solid">
        </div>
        <div class="col-5" style="border-top:2px solid; border-left:2px solid; border-right:2px solid; border-bottom:0px solid">
            <h4 style="text-align:center">Urgent</h4>
        </div>
        <div class="col-5" style="border-top:2px solid; border-left:0px solid; border-right:2px solid; border-bottom:0px solid">
            <h4 style="text-align:center">Not Urgent</h4>
        </div>
    </div>


    @*Row 1*@
    <div class="row">

        <div class="col-2" style="border-top: 2px solid; border-left: 2px solid; border-right: 0px solid; border-bottom: 2px solid">
            <div>
                <div >
                    <h4 style="text-align:center;">Important</h4>
                </div>
            </div>
        </div>
        <div class="col-5" style="border-top: 2px solid; border-left: 2px solid; border-right: 2px solid; border-bottom: 2px solid">
            <h6 style=" text-align: center; font-weight:bold; text-decoration:underline">Quadrant 1</h6>
            <div>
                <table class="table table-striped table-bordered">
                    <thead class="table">
                        <tr>
                            <td>Done</td>
                            <td>Task</td>
                            <td></td>
                        </tr>
                    </thead>

                    @foreach (var taskInstance in Model)
                    {
                        if (taskInstance.IsImportant == true & taskInstance.IsUrgent == true & taskInstance.IsCompleted == false)
                        {
                        <tr>
                            @if (taskInstance.IsCompleted == true)
                            {
                                <td>
                                    <center>
                                        <a asp-controller="Home" asp-action="ChangeTaskDoneState" asp-route-taskid="@taskInstance.TaskID">
                                            <span>&#9989;</span>
                                        </a>
                                    </center>
                                </td>

                            }
                            else
                            {
                                <td>
                                    <center>
                                        <a asp-controller="Home" asp-action="ChangeTaskDoneState" asp-route-taskid="@taskInstance.TaskID">
                                            <span>&#9744;</span>
                                        </a>
                                    </center>

                                </td>
                            }
                            <td>@taskInstance.TaskName</td>
                            <td>
                                <a class="button" style="background-color:orange; padding:4px 0px 4px 0px" asp-controller="Home" asp-action="Edit" asp-route-taskid="@taskInstance.TaskID">Edit</a>
                            </td>
                            <td>
                                <a class="button" style="background-color: red; padding: 4px 0px 4px 0px" asp-controller="Home" asp-action="Delete" asp-route-taskid="@taskInstance.TaskID">Delete</a>

                            </td>
                        </tr>
                        }
                    }
                </table>
            </div>
        </div>








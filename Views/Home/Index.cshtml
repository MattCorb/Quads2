@{
    ViewData["Title"] = "Home Page";
}


<div class="container" style="padding:10px 5px 5px 10px">
    <div class="row">
        <div class="col-2"></div>
        <div class="col-10">
                <h1 style="text-align:center">Stephen Covey's Time Management Matrix</h1>
        </div>
    </div>
</div>

<div class="container" style="padding:10px 5px 5px 10px">

    @*Row Header*@
    <div class="row">

        <div class="col-2" style="border-top:0px solid; border-left:0px solid; border-right:0px solid; border-bottom:0px solid">
        </div>
        <div class="col-5" style="border-top:2px solid; border-left:2px solid; border-right:2px solid; border-bottom:0px solid">
            <h4 style="text-align:center">Urgent</h4>
        </div>
        <div class="col-5" style="border-top:2px solid; border-left:0px solid; border-right:2px solid; border-bottom:0px solid">
            <h4 style="text-align:center">Not Urgent</h4>
        </div>
    </div>


    @*Row 1*@
    <div class="row" style="height:auto">

        <div class="col-2" style="border-top: 2px solid; border-left: 2px solid; border-right: 0px solid; border-bottom: 2px solid">
            <div>
                <div >
                    <h4 style="text-align:center;">Important</h4>
                </div>
            </div>
        </div>
        <div class="col-5" style="border-top: 2px solid; border-left: 2px solid; border-right: 2px solid; border-bottom: 2px solid">
            <h6 style=" text-align: center; font-weight:bold; text-decoration:underline">Quadrant 1</h6>
            <div>
                <table class="table table-striped table-bordered">
                    <thead class="table">
                        <tr>
                            <td>Due Date</td>
                            <td>Task</td>
                            <td>Category</td>
                            <td></td>
                        </tr>
                    </thead>
                    <tr>
                        <td>2/10/2022</td>
                        <td>Open a Bank Acount</td>
                        <td>Personal</td>
                        <td>
                            <a class="button" style="background-color:orange; padding:4px 0px 4px 0px" asp-controller="Home" asp-action="Edit" asp-route-taskid="1">Edit</a>
                            <br />
                            <a class="button" style="background-color: red; padding: 4px 0px 4px 0px" asp-controller="Home" asp-action="Delete" asp-route-taskid="1">Delete</a>
                        </td>
                    </tr>


                    <tr>
                        <td>2/10/2022</td>
                        <td>Open a Bank Acount</td>
                        <td>Personal</td>
                        <td>
                            <a class="button" style="background-color:orange; padding:4px 0px 4px 0px" asp-controller="Home" asp-action="Edit" asp-route-taskid="1">Edit</a>
                            <br />
                            <a class="button" style="background-color: red; padding: 4px 0px 4px 0px" asp-controller="Home" asp-action="Delete" asp-route-taskid="1">Delete</a>
                        </td>
                    </tr>

                </table>
            </div>
            <br />
            <br />
            <br />
        </div>
        <div class="col-5" style="border-top: 2px solid; border-left: 0px solid; border-right: 2px solid; border-bottom: 2px solid">
            <h6 style=" text-align: center; font-weight:bold; text-decoration:underline">Quadrant 2</h6>
        </div>
    </div>


    @*Row 2*@
    <div class="row" style="height:auto">
        <div class="col-2" style="border-top: 0px solid; border-left: 2px solid; border-right: 0px solid; border-bottom: 2px solid">
            <div>
                <div>
                    <h4 style="text-align:center; vertical-align:middle">Not Important</h4>
                </div>
            </div>
        </div>
        <div class="col-5" style="border-top: 0px solid; border-left: 2px solid; border-right: 2px solid; border-bottom: 2px solid">
            <h6 style=" text-align: center; font-weight:bold; text-decoration:underline">Quadrant 3</h6>
        </div>
        <div class="col-5" style="border-top: 0px solid; border-left: 0px solid; border-right: 2px solid; border-bottom: 2px solid">
            <h6 style=" text-align: center; font-weight:bold; text-decoration:underline">Quadrant 4</h6>
        </div>
    </div>


</div>




